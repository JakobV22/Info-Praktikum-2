#include "Fahrzeug.h"
#include <iomanip>

Fahrzeug::Fahrzeug() {

	std::cout << "Objekt wurde mit Standardkonstruktor erstellt: " << p_sName
			<< ", " << p_iID << std::endl;

}
Fahrzeug::Fahrzeug(std::string sName) :
		p_sName(sName) {

	std::cout << "Objekt wurde mit Nichtstandardkonstruktor erstellt: "
			<< p_sName << ", " << p_iID << std::endl;
}

Fahrzeug::Fahrzeug(std::string sName, double dMaxGeschwindigkeit) :
		p_sName(sName), p_dMaxGeschwindigkeit((dMaxGeschwindigkeit>=0) ? dMaxGeschwindigkeit : 0 ) {

	std::cout << "Objekt wurde mit Nichtstandardkonstruktor2 erstellt: "
			<< p_sName << ", " << p_iID << ", " << p_dMaxGeschwindigkeit
			<< std::endl;

}

Fahrzeug::~Fahrzeug() {
	std::cout << "Objekt wurde mit Standarddestruktor gelÃ¶scht: " << p_sName
			<< ", " << p_iID << std::endl;
}

void Fahrzeug::vAusgeben(){
	 std::cout << std::resetiosflags (std::ios::left) <<std::setiosflags (std::ios::right) << std::setw(5) << p_iID <<std::setw(3) <<""<< std::resetiosflags (std::ios::right) <<std::setiosflags (std::ios::left) <<std::setw(15) << p_sName <<std::resetiosflags (std::ios::left) <<std::setiosflags (std::ios::right) <<std::setw(15) << p_dMaxGeschwindigkeit<<std::setw(15) << p_dGesamtstrecke;

}
